@model ApplicationUserViewModel
@{
    ViewData["Title"] = " | Manage Users";
}

<h1 class="mb-2">Manager Users</h1>

<h5 class="mt-2"><a asp-action="Add">Add a User</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>Username</th>
            <th>Roles</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.ApplicationUsers.Count() == 0)
        {
            <tr><td colspan="5">There are no user accounts.</td></tr>
        }
        else
        {
            @foreach (ApplicationUser user in Model.ApplicationUsers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        @foreach (string roleName in user.RoleNames)
                        {
                            <div>@roleName</div>
                        }
                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-danger">Delete User</button>
                        </form>
                    </td>
                    <td>
                        @*TODO make generic*@
                        <form method="post" asp-action="AddToAdmin" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-warning">Add To Admin</button>
                        </form>
                    </td>
                    <td>
                        @*TODO make generic*@
                        <form method="post" asp-action="RemoveFromAdmin" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-outline-danger">Remove From Admin</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<h1 class="mb-2">Manage Roles</h1>

@if (Model.Roles.Count() == 0)
{
    @*TODO make generic*@
    <form method="post" asp-action="CreateAdminRole">
        <button type="submit" class="btn btn-primary">Create Admin Role</button>
    </form>
}
else
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                            <button type="submit" class="btn btn-danger">Delete Role</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
