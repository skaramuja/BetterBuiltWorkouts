@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container form-container">

    <h1 class="text-center mb-4">Register</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger offset-sm-3"></div>

    <form method="post" asp-action="Register">
        <div class="form-group row">
            <div class="col-sm-3"><label>Username:</label></div>
            <div class="col-sm-9">
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Username" class="text-danger offset-sm-3 pl-4"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-3"><label>First Name:</label></div>
            <div class="col-sm-9">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="FirstName" class="text-danger offset-sm-3 pl-4"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-3"><label>Last Name:</label></div>
            <div class="col-sm-9">
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="LastName" class="text-danger offset-sm-3 pl-4"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-3"><label>Email:</label></div>
            <div class="col-sm-9">
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Email" class="text-danger offset-sm-3 pl-4"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-3"><label>Password:</label></div>
            <div class="col-sm-9">
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Password" class="text-danger offset-sm-3 pl-4"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-3"><label>Confirm Password:</label></div>
            <div class="col-sm-9">
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="ConfirmPassword" class="text-danger offset-sm-3 pl-4"></span>
            </div>
        </div>

        <div class="row">
            <div class="offset-2 col-sm-9">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="offset-2 col-sm-9">
                Already Registered? <a asp-action="Login">Log In</a>
            </div>
        </div>
    </form>

</div>