@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="container form-container">

<h1 class="text-center mb-4">Login</h1>

<div asp-validation-summary="ModelOnly" class="text-danger offset-sm-3"></div>
<form method="post" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="form-group row">
        <div class="col-sm-3"><label>Username:</label></div>
        <div class="col-sm-9">
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Username" class="text-danger offset-sm-3 pl-4"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3"><label>Password:</label></div>
        <div class="col-sm-9">
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password" class="text-danger offset-sm-3 pl-4"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <input type="checkbox" title="Remember Me" asp-for="RememberMe" class="form-check d-inline" />
        <label>Remember Me</label>
        </div>
    </div>

    <div class="row">
        <div class="offset-3 col-sm-9">
            <button type="submit" class="btn btn-primary">Log In</button>
        </div>
    </div>

    <div class="row mt-3">
        <div class="offset-3 col-sm-9">
            Not Registered? <a asp-action="Register">Register as a new user</a>
        </div>
    </div>


</form>
</div> 
