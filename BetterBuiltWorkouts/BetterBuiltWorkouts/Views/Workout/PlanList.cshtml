@model PlanListViewModel
@{
    ViewData["Title"] = "View Workout Plans";
}
<h1><a asp-action="CreatePlan" class="btn btn-success">Add a new Plan</a></h1>
<div class="row">

    <div class="col-sm-9">
        <div class="list-inline">
            @foreach (Plan userPlan in Model.Plans)
            {
                <div class="item-link">

                    <a asp-action="PlanDetails" asp-route-id="@userPlan.PlanId">
                        <div style="{display: flex, flex-direction: column}">


                            @userPlan.Name
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
