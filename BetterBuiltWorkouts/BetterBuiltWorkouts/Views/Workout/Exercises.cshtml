@model ExerciseListViewModel
@{
    ViewData["Title"] = "Build Your Exercise";
}
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">ExerciseType</h3>
        <div class="list-group">
            @foreach (ExerciseType exerciseType in Model.ExerciseTypes)
            {
                <a asp-action="Exercises"
                   asp-route-selectedExerciseType="@exerciseType.ExerciseTypeID"
                   class="list-group-item 
                       @Model.CheckActiveExerciseType(exerciseType.ExerciseTypeID)">@exerciseType.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Exercise exercise in Model.Exercises) 
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@exercise.ExerciseID">
                            <img src="~/images/@exercise.Image"
                                width=60 
                                height=40
                                alt="@exercise.Name"
                                title="@exercise.Name" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>